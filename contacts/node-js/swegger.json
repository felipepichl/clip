{
  "openapi": "3.0.0",
  "info": {
    "title": "Node documentation",
    "description": "This is an API",
    "version": "1.0.0",
    "contact": {
      "email": "felipe.pichl@hotmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create users",
        "description": "Create a new user",
        "requestBody": {
          "required": true,
          "description": "Fileds required for create a new user",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "The name of the user"
                  },
                  "cpf": {
                    "type": "string",
                    "description": "The CPF (Brazilian identification number) of the user"
                  },
                  "whatsapp": {
                    "type": "string",
                    "description": "The WhatsApp number of the user"
                  }
                },
                "example": {
                  "name": "John Due",
                  "cpf": "111.222.333-44",
                  "whatsapp": "5555999999999"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "example": {
                  "id": "e5f29978-8764-417c-9ff3-d73964e331d7",
                  "name": "John Due",
                  "cpf": "111.222.333-44",
                  "whatsapp": "5555999999999",
                  "created_at": "2022-04-29T01:02:49.546Z",
                  "updated_at": "2022-04-29T01:02:49.546Z"
                }
              }
            }
          },
          "409": {
            "description": "Conflict: User already exists",
            "content": {
              "application/json": {
                "example": {
                  "error": "User with CPF 111.222.333-44 already exists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get users",
        "description": "Get a list of users",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": "e5f29978-8764-417c-9ff3-d73964e331d7",
                    "name": "John Due",
                    "cpf": "111.222.333-44",
                    "whatsapp": "5555999999999",
                    "created_at": "2022-04-29T01:02:49.546Z",
                    "updated_at": "2022-04-29T01:02:49.546Z"
                  },
                  {
                    "id": "f6d87a76-4563-4b79-8cc4-2f0ae65c3d2e",
                    "name": "Jane Smith",
                    "cpf": "222.333.444-55",
                    "whatsapp": "5555888888888",
                    "created_at": "2022-05-01T10:15:30.000Z",
                    "updated_at": "2022-05-01T10:15:30.000Z"
                  }
                ]
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "example": {
                  "error": "Users not found"
                }
              }
            }
          }
        }
      }
    }
  }
}
