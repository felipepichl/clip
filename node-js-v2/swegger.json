  "paths": {
    "/issues": {
      "post": {
        "tags": ["Issues"],
        "summary": "Create Issue",
        "description": "Create a new Issue",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description" : {
                    "type": "string"
                  },
                  "latitude": {
                    "type": "number"
                  },
                  "longitude": {
                    "type": "number"
                  }
                },
                "example": {
                  "description": "issue name sampled",
                  "latitude": -30.1093778,
                  "longitude": -51.3166929
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create a new Issue",
            "content": {
              "application/json": {
                "example": {
                  "id": "6fed2a42-2a28-4f80-b58b-6ad11677ae8e",
                  "description": "issue name sampled",
                  "cordinates": {
                    "latitude": -30.1093778,
                    "longitude": -51.3166929
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Issues"],
        "summary": "List all issues",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "description": {
                        "type": "string"
                      },
                      "cordinates": {
                        "type": "object",
                        "properties": {
                          "latitude": {
                            "type": "number"
                          },
                          "longitude": {
                            "type": ""
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
