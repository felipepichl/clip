{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES6"],
    "allowJs": true,
    "rootDir": "./",
    "removeComments": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
  }
}
